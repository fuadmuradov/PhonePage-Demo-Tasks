
@model IEnumerable<IdentityRole>



@section Css{
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Responsive Bootstrap 4 Admin &amp; Dashboard Template">
    <meta name="author" content="Bdtask">
    <title>Bhulua - Bootstrap 4 Admin Template Deshboard</title>
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/admin/assets/dist/img/favicon.png">
    <!--Global Styles(used by all pages)-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="~/admin/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/admin/assets/plugins/metisMenu/metisMenu.min.css" rel="stylesheet">
    <link href="~/admin/assets/plugins/fontawesome/css/all.min.css" rel="stylesheet">
    <link href="~/admin/assets/plugins/typicons/src/typicons.min.css" rel="stylesheet">
    <link href="~/admin/assets/plugins/themify-icons/themify-icons.min.css" rel="stylesheet">
    <!--Third party Styles(used by this page)-->
    <link href="~/admin/assets/plugins/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
    <!--Start Your Custom Style Now-->
    <link href="~/admin/assets/dist/css/style.css" rel="stylesheet">

}

<div class="card-body">
    <div class=table-responsive>
        <!--<table class="table table-sm table-nowrap card-table">-->
        <table class="table display table-bordered table-striped table-hover bg-white m-0 card-table">
            <thead>
                <tr> <a asp-controller="Role" asp-action="Create" ><button class="btn btn-secondary" >Create</button></a> </tr>
                <tr>
                    <th>Image</th>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="avatar-group">
                                <a href="user_profile.html" class="avatar avatar-xs" data-toggle="tooltip" title="Melissa Ayre">
                                    <img src="~/admin/assets/dist/img/avatar-1.jpg" class="avatar-img rounded-circle" alt="...">
                                </a>

                            </div>
                        </td>
                        <td>@item.Id</td>
                        <td>@item.Name</td>

                        <td>
                            <a asp-controller="Role" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger-soft btn-sm"><i class="far fa-trash-alt"></i></a>
                            <a asp-controller="Role" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success-soft btn-sm ml-1"><i class="far fa-edit"></i></a>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>

@section script{
    <!--Global script(used by all pages)-->
    <script data-cfasync="false" src="~/admin/cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script>
    <script src="~/admin/assets/plugins/jQuery/jquery-3.4.1.min.js"></script>
    <script src="~/admin/assets/dist/js/popper.min.js"></script>
    <script src="~/admin/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/admin/assets/plugins/metisMenu/metisMenu.min.js"></script>
    <script src="~/admin/assets/plugins/perfect-scrollbar/dist/perfect-scrollbar.min.js"></script>
    <!-- Third Party Scripts(used by this page)-->
    <script src="~/admin/assets/plugins/chartJs/Chart.min.js"></script>
    <script src="~/admin/assets/plugins/sparkline/sparkline.min.js"></script>
    <script src="~/admin/assets/plugins/datatables/dataTables.min.js"></script>
    <script src="~/admin/assets/plugins/datatables/dataTables.bootstrap4.min.js"></script>
    <!--Page Active Scripts(used by this page)-->
    <script src="~/admin/assets/dist/js/pages/dashboard.js"></script>
    <!--Page Scripts(used by all page)-->
    <script src="~/admin/assets/dist/js/sidebar.js"></script>
}