@model Teacher


<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="mb-3">
        <label>Name</label>
        <input type="text" class="form-control" asp-for="Name"><br />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="HobbyIds">Hobbies</label>
        <select asp-for="HobbyIds" class="form-select" asp-items="@(new SelectList(ViewBag.Hobbies, "id", "Name"))">
        </select>
        <span asp-validation-for="HobbyIds"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

